<?xml version="1.0" encoding="utf-8"?>
<MotionScene
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="700">
        <OnClick
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/mypage_img_profile_main"
            motion:touchAnchorSide="top">
        </OnClick>

        <KeyFrameSet>
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start" >

        <Constraint
            android:id="@+id/mypage_img_profile_main"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/mypage_img_profile_gradation"
            motion:layout_constraintEnd_toEndOf="@+id/mypage_img_profile_main"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            motion:layout_constraintBottom_toTopOf="@id/mypage_img_profile_gradation_subbar"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="@+id/mypage_img_profile_main" />
        <Constraint
            android:id="@+id/mypage_img_profile_gradation_subbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/mypage_img_profile_main"
            motion:layout_constraintStart_toStartOf="parent" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">

        <Constraint
            android:id="@+id/mypage_img_profile_main"
            android:layout_height="480dp"
            android:scaleType="centerCrop"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/mypage_img_profile_gradation"
            motion:layout_constraintEnd_toEndOf="@+id/mypage_img_profile_main"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            motion:layout_constraintBottom_toTopOf="@id/mypage_img_profile_gradation_subbar"
            android:alpha="1.0"
            motion:layout_constraintStart_toStartOf="@+id/mypage_img_profile_main" />
        <Constraint
            android:id="@+id/mypage_img_profile_gradation_subbar"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/mypage_img_profile_main"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>

</MotionScene>