<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".dialog.AddContactDialog">

    <ImageView
        android:id="@+id/contact_dialog_iv_title"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:src="@drawable/ic_account_circle"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/contact_dialog_ic_title_user_name"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_person"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/contact_dialog_et_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/contact_dialog_et_user_name" />

    <EditText
        android:id="@+id/contact_dialog_et_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/bg_edit_text"
        android:hint="이름을 입력하세요."
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginStart="4dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/contact_dialog_ic_title_user_name"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_iv_title" />

    <ImageView
        android:id="@+id/contact_dialog_iv_title_phone_number"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@+id/contact_dialog_et_phone_number"
        app:layout_constraintStart_toStartOf="@+id/contact_dialog_ic_title_user_name"
        app:layout_constraintTop_toTopOf="@+id/contact_dialog_et_phone_number" />

    <EditText
        android:id="@+id/contact_dialog_et_phone_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_edit_text"
        android:hint="연락처를 입력하세요."
        android:maxLines="1"
        android:inputType="phone"
        android:maxLength="13"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/contact_dialog_et_user_name"
        app:layout_constraintStart_toEndOf="@+id/contact_dialog_iv_title_phone_number"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_et_user_name" />

    <ImageView
        android:id="@+id/contact_dialog_iv_affiliated_title"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_document_bag"
        app:layout_constraintBottom_toBottomOf="@+id/contact_dialog_et_affiliated"
        app:layout_constraintStart_toStartOf="@+id/contact_dialog_iv_title_phone_number"
        app:layout_constraintTop_toTopOf="@+id/contact_dialog_et_affiliated" />

    <EditText
        android:id="@+id/contact_dialog_et_affiliated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:background="@drawable/bg_edit_text"
        android:hint="소속된 게임을 입력하세요."
        android:inputType="text"
        android:maxLines="1"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="@+id/contact_dialog_et_phone_number"
        app:layout_constraintStart_toEndOf="@+id/contact_dialog_iv_affiliated_title"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_et_phone_number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contact_dialog_et_affiliated">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contact_dialog_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/lightTurquoise"
            android:text="취소"
            android:textColor="@color/white" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/contact_dialog_btn_accept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:backgroundTint="@color/lightTurquoise"
            android:text="확인"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>