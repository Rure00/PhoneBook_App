<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/contact_item_iv_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="12dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/bg_circle_image"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_item_tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/font_galmuri"
        app:layout_constraintBottom_toTopOf="@+id/contact_item_tv_affiliated"
        app:layout_constraintEnd_toStartOf="@+id/contact_item_iv_notification"
        app:layout_constraintStart_toEndOf="@+id/contact_item_iv_profile"
        app:layout_constraintTop_toTopOf="@+id/contact_item_iv_profile"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/contact_item_tv_affiliated"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:fontFamily="@font/font_galmuri"
        app:layout_constraintBottom_toBottomOf="@+id/contact_item_iv_profile"
        app:layout_constraintEnd_toEndOf="@+id/contact_item_tv_user_name"
        app:layout_constraintStart_toStartOf="@+id/contact_item_tv_user_name"
        app:layout_constraintTop_toBottomOf="@+id/contact_item_tv_user_name" />

    <ImageView
        android:id="@+id/contact_item_iv_notification"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_notification"
        android:layout_marginEnd="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/contact_item_iv_favorite"
        app:layout_constraintEnd_toStartOf="@+id/contact_item_iv_favorite"
        app:layout_constraintTop_toTopOf="@+id/contact_item_iv_favorite" />

    <ImageView
        android:id="@+id/contact_item_iv_favorite"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_favorite_selected"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="0dp"
        android:layout_height=".5dp"
        android:background="#D5D5D5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/contact_item_iv_favorite"
        app:layout_constraintStart_toStartOf="@+id/contact_item_tv_affiliated" />
</androidx.constraintlayout.widget.ConstraintLayout>